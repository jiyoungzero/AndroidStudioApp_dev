<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainExercise">

    <Button
        android:id="@+id/btnprev2"
        android:layout_marginTop="0dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tvnbold"
        android:text="돌아가기"
        android:textSize="20sp"
        android:backgroundTint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/tvnbold"
        android:text="당신의 MBTI별 운동은 ?"
        android:textColor="#4C84B1"
        android:textSize="50dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncheck"
            android:layout_width="150dp"
            android:layout_marginLeft="220dp"
            android:fontFamily="@font/tvnbold"
            android:layout_height="wrap_content"
            android:backgroundTint="#4D9EDF"
            android:text="결과보러가기"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:src="@drawable/exer_choice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tvnbold"
            android:gravity="center"
            android:text="당신의 유형은?"
            android:textColor="#4C84B1"
            android:textSize="40dp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rg_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tvnbold"
                android:paddingRight="5dp"
                android:text="장직아"
                android:textSize="28dp" />

            <RadioButton
                android:id="@+id/rg_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tvnbold"
                android:paddingRight="5dp"
                android:text="장직인"
                android:textSize="28dp" />

            <RadioButton
                android:id="@+id/rg_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tvnbold"
                android:paddingRight="5dp"
                android:text="장행인"
                android:textSize="28dp" />

            <RadioButton

                android:id="@+id/rg_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tvnbold"
                android:text="장행아"
                android:textSize="28dp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rg_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tvnbold"
                android:paddingRight="5dp"
                android:text="실행인"
                android:textSize="28dp" />

            <RadioButton
                android:id="@+id/rg_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tvnbold"
                android:paddingRight="5dp"
                android:text="실행아"
                android:textSize="28dp" />

            <RadioButton
                android:id="@+id/rg_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tvnbold"
                android:paddingRight="5dp"
                android:text="실직아"
                android:textSize="28dp" />

            <RadioButton
                android:id="@+id/rg_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tvnbold"
                android:text="실직인"
                android:textSize="28dp" />
        </RadioGroup>
    </LinearLayout>


</LinearLayout>